			System.out.println(account.getCustomerName()+"	"+"has the following accounts");
		}
		
		

		}
	public static void displaydetailsofAccount(ArrayList<Customer> accountList) {
		System.out.println("CustomerId:" + "\t" + "Customer Name "+ "Account Type "+ "Balance ");
		for (Customer account : accountList) {
			if (account != null)
				System.out.println(account.getCustomerCode() + " \t\t" + account.getCustomerName());
		}
		
	}
